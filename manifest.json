{
    "manifest_version": 2,
    "name": "HID control prevention",
    "description": "__MSG_description_ext__",
    "version": "1.5",
    "default_locale": "en",
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_popup": "ui/popup.html"
    },
    "options_page": "ui/options.html",
    "content_scripts": [
        {
            "all_frames": true,
            "js": [
                "content-scripts.js"
            ],
            "matches": [
                "<all_urls>"
            ],
            "run_at": "document_start"
        }
    ],
    "optional_permissions": [
        "downloads"
    ],
    "permissions": [
        "chrome://favicon/",
        "storage"
    ],
    "content_security_policy": "script-src 'self'; object-src 'self'; img-src * data: chrome://favicon;"
}